<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:queryHint="Seach for places"
        android:iconifiedByDefault="false"
        android:background="@drawable/rounded_corners"/>
    
    <Button
        android:id="@+id/review_count_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:text="Reviews"
        android:drawableRight="@drawable/ic_arrow_drop_down_black"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/rounded_corners"/>

    <LinearLayout
        android:id="@+id/review_count_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_corners">
    
        <TextView 
            android:id="@+id/highest_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest Reviews: "
        />

        <TextView 
            android:id="@+id/mean_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mean Reviews: "
        />

    </LinearLayout>
        
</RelativeLayout>
